# ==============================================================================
#                      API KEYS & SECRETS
# ==============================================================================
# - Required for embeddings and primary LLM generation.
OPENAI_API_KEY="sk-..."

# - Required for the advanced reranking step in the RAG pipeline.
COHERE_API_KEY="..."

# - Optional: Required only if you want to use Anthropic models as a fallback.
ANTHROPIC_API_KEY="..."

# - Optional: Required only if you want to use Google models as a fallback.
GOOGLE_API_KEY="..."

# ==============================================================================
#                      VECTOR STORE CONFIGURATION
# ==============================================================================
# The model used for creating vector embeddings for the documents.
VECTORSTORE_EMBEDDING_MODEL="text-embedding-3-small"

# The name of the collection within ChromaDB where vectors are stored.
VECTORSTORE_COLLECTION_NAME="rag_document_collection"

# ==============================================================================
#                      RAG PIPELINE TUNING
# ==============================================================================
# The target size for parent document chunks.
RAG_CHUNK_SIZE=200

# The number of documents to process in a single batch during indexing.
RAG_INDEXING_BATCH_SIZE=200

# The number of initial documents to retrieve from the vector store.
RAG_SEARCH_K=30

# The number of documents to keep after the reranking step.
RAG_RERANKER_TOP_N=5

# ==============================================================================
#                      RERANKER MODEL
# ==============================================================================
# The specific Cohere model to use for reranking retrieved documents.
COHERE_RERANK_MODEL="rerank-v3.5"
